@model IEnumerable<SalesTaskWebApp.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Customers List</h2>
        </div>
        <div class="col-6 text-right">
            @Html.ActionLink("Add New Customer", "Create", "Customer", new { @class = "btn btn-primary " })
        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @{int number = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(number++)</td>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>
